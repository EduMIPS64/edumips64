<module rename-to="edumips64">
  <!-- Core GWT modules. -->
  <inherits name="com.google.gwt.core.Core" />
  <inherits name="com.google.gwt.json.JSON" />

  <!-- Web worker linker. -->
  <inherits name="org.gwtproject.rpc.worker.RpcToWorkers" />
  <inherits name="prj.gwtwwlinker.workerlinker.WorkerLinker" />

  <entry-point class="org.edumips64.client.WebUi"/>

  <!-- Java files to compile to JS. Exclude the ones that use APIs not supported by GWT or are useless. -->
  <source path="client" />
  <source path="core" />
  <source path="utils">
    <exclude name="io/Local*.java" />
    <exclude name="MetaInfo.java" />
    <exclude name="JavaPrefsConfigStore.java" />
  </source>

  <!-- Files to copy to the output directory. -->
  <public path="client">
    <include name="index.html" />
    <include name="ui.js" />
    <include name="style.css" />
    <include name="logo.png" />
    <include name="favicon.png" />
  </public>
</module>
